{
  "name": "commitwhisperer",
  "displayName": "CommitWhisperer",
  "description": "Lorem ipsum",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.generateCommitMessage",
        "title": "Generate Commit Message"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Generate Commit Message",
      "properties": {
        "generateCommitMessage.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your OpenAI API key"
        },
        "generateCommitMessage.commitMessagePrompt": {
          "type": "string",
          "default": "Create a commit message based on the following git diff:",
          "description": "The prompt for generating commit messages"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@types/vscode": "^1.77.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "openai": "^3.2.1"
  }
}
